{
  "mcpServers": {
    "email": {
      "command": "python3",
      "args": ["mcp_servers/email_server.py"],
      "env": {
        "SMTP_HOST": "${SMTP_HOST}",
        "SMTP_PORT": "${SMTP_PORT}",
        "SMTP_USER": "${SMTP_USER}",
        "SMTP_PASSWORD": "${SMTP_PASSWORD}",
        "SMTP_FROM_NAME": "${SMTP_FROM_NAME}",
        "VAULT_PATH": "AI_Employee_Vault",
        "DRY_RUN": "${DRY_RUN}"
      }
    }
  }
}
