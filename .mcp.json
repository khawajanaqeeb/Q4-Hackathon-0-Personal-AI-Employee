{
  "mcpServers": {
    "email": {
      "command": "python3",
      "args": ["mcp_servers/email_server.py"],
      "env": {
        "SMTP_HOST": "${SMTP_HOST}",
        "SMTP_PORT": "${SMTP_PORT}",
        "SMTP_USER": "${SMTP_USER}",
        "SMTP_PASSWORD": "${SMTP_PASSWORD}",
        "SMTP_FROM_NAME": "${SMTP_FROM_NAME}",
        "VAULT_PATH": "AI_Employee_Vault",
        "DRY_RUN": "${DRY_RUN}"
      }
    },
    "social_media": {
      "command": "python3",
      "args": ["mcp_servers/social_media_server.py"],
      "env": {
        "VAULT_PATH": "AI_Employee_Vault",
        "TWITTER_SESSION_PATH": "${TWITTER_SESSION_PATH}",
        "FACEBOOK_SESSION_PATH": "${FACEBOOK_SESSION_PATH}",
        "INSTAGRAM_SESSION_PATH": "${INSTAGRAM_SESSION_PATH}",
        "DRY_RUN": "${DRY_RUN}"
      }
    },
    "odoo": {
      "command": "python3",
      "args": ["mcp_servers/odoo_server.py"],
      "env": {
        "ODOO_URL": "${ODOO_URL}",
        "ODOO_DB": "${ODOO_DB}",
        "ODOO_USERNAME": "${ODOO_USERNAME}",
        "ODOO_PASSWORD": "${ODOO_PASSWORD}",
        "VAULT_PATH": "AI_Employee_Vault",
        "DRY_RUN": "${DRY_RUN}"
      }
    }
  }
}
